<div class="container">
  <h1>Listing posts</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
    </tr>
    
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.description %></td>
      <td><%= link_to 'Show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post),
      data: {confirm: 'Are you sure?',"turbo-method": :delete } %></td>
    </tr>
    <% end %>
  </table>
</div>


