
<%= form_for @post do |form| %>
<div class="row">
	<div class="form-group col-md-6">
		<label for="title"><%= form.label :title %></label>
		<%= form.text_field :title,  :class => "form-control" %>
		<small id="title" class="form-text text-muted">Required, at least 5 characters.</small>
	</div>
	<div class="form-group col-md-6">
		<label for="select"><%= form.label :User %></label>
		<%= form.select :user_id, options_for_select(User.pluck(:name, :id)), {prompt: "Please Select" }, {class: 'form-control'} %>
	</div>
</div>
<div class="form-group">
	<label for="description"><%= form.label :text %></label>
	<%= form.text_area :description,  :class => "form-control" %>
</div>

<p>
	<%= form.submit class: "btn btn-success btn-sm" %>
</p>

<% end %>

