<div class="container">
  <h1>Listing users</h1>
  <table>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
    
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user),
      data: {confirm: 'Are you sure?',"turbo-method": :delete } %></td>
    </tr>
    <% end %>
  </table>
</div>


